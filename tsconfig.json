{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"removeComments": false,
		"outDir": "dist",
		"rootDir": "./src",
		"sourceMap": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types",
		],
		"suppressImplicitAnyIndexErrors": true
	},
	"exclude": [
		"node_modules",
		"build",
	]
}